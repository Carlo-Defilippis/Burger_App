<h1>Burgers!</h1>

<h2>Burger you ate!</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers you haven't eaten!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Eat right away?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Eat later!<br>
    <input type="radio" name="sleepy" value="0"> Eat now!
  </div>

  <button type="submit">Add Burger</button>
</form>
